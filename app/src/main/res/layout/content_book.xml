<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_white"
    tools:context=".BookActivity">

    <TextView
        android:id="@+id/flashcard_book_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/card_question"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/edit_book_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/flashcard_book_question"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/flashcard_book_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="@string/card_answer"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/edit_book_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/flashcard_book_answer"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_edit" />
</RelativeLayout>
